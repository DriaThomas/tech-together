<div class="signup-form-container">

    <form class="signup-container" action="/auth/signup" method="POST" style="border:1px solid #ccc">
        <div class="container">
            <h1>Sign Up</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>

            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" name="email" required>

            <label for="userName"><b>username</b></label>
            <input type="text" placeholder="Enter username" name="userName" required>

            <label for="firstName"><b>First Name</b></label>
            <input type="text" placeholder="Enter firstName" name="firstName" required>

            <label for="lastName"><b>Last Name</b></label>
            <input type="text" placeholder="Enter lastName" name="lastName" required>

            <label for="gift"><b>Gift</b></label>
            <input type="text" placeholder="Enter Gift" name=" gift" required>


            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" required>

            <label for="password-repeat"><b>Repeat Password</b></label>
            <input type="password" placeholder="Repeat Password" name="password-repeat" required>

            {{!-- <label> <b>Image</b><br>
                <input type="file" name="profilePic" />
            </label><br><br> --}}



            <p class="account-message-signup">By creating an account you agree to our <a href="#"
                    style="color:dodgerblue">Terms & Privacy</a>.</p>

            <div class="clearfix">
                <button type="submit" id="signupbtn">Sign Up</button>
                <p class="account-message-signup">
                    Do you already have an account?
                    <a href="/auth/login">Login</a>
                </p>
            </div>
        </div>
        {{!-- error message will be added here --}}
        <p>{{errorMessage}}</p>
    </form>
</div>