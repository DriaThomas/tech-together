<div class='user-profile'>

    <div id="user-profile-top">


        <div class='user-details'>
            {{!-- <p>{{userObject.firstName}}</p> --}}
            <h1 id="profile-name"><b>
                    {{#each userObject}}
                    {{this.firstName}} {{this.lastName}}
                </b></h1>
            <p>
                {{this.email}}
            </p>
            <p>
                {{this.sirName}}
            </p>
            {{this.gift}}
            {{/each}}
            <a href="/profile/edit">Edit Profile</a>
        </div>
    </div>

    <div id="user-feed">
        <div id="info-card">
            <div id="info-card-content">
                <h3>
                    My Info
                </h3>
                {{#each this}}
                <p>
                    {{this.gift}}
                </p>
                {{/each}}
                <span>
                    Family
                    {{#each this}}

                    {{this.lastName}}
                    {{this.sirname}}

                    {{/each}}
                </span>
            </div>
            {{#each userObject}}
            {{ this.gift}}
            {{/each}}
        </div>
        {{#each user}}
        {{this.sirName}}
        {{this.title}}
        {{/each}}
        {{!-- <div id="right-side-content">
            <div id="user-listings">
                <div id="user-listings-content">
                    <h3>My Listings</h3>
                    <li><a href="">Listing 1</a></li>
                    <li><a href="">Listing 2</a></li>
                </div>
            </div> --}}




        </div>
        <div id="delete-account">
            <form id="delete-account" action="/profile/delete/{{userObject._id}}" method="POST">
                <button>Delete Account</button>
            </form>
        </div>
    </div>
</div>